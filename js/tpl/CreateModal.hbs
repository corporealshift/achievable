<div id="create-overlay" class="overlay hidden">
    <div id="create" class="create">
        <h3>Create Task</h3>
        <form id="create-task" action="" method="post">
            <div>
                <label>Title:</label>
                <input placeholder="Task title" type="text" class="title" name="title" value="">
            </div>
            <div>
                <label>Due Date:</label>
                <input type="text" name="due_date" class="due-date" value="" placeholder="Due Date">
            </div>
            <div>
                <label>Description:</label>
                <textarea name="description" placeholder="Task Description" rows="8" cols="40"></textarea>
            </div>
            <div>
                <label>Difficulty:</label>
                <input type="number" name="difficulty" placeholder="1-10" min="1" max="10" step="1">
            </div>
            <div>
                <label>Repeats:</label>
                <label class="radio">
                    <input type="radio" name="repeat" value="weekly" placeholder="Weekly">Weekly
                </label>
                <label class="radio">
                    <input type="radio" name="repeat" value="daily" placeholder="Daily">Daily
                </label>
                <label class="radio">
                    <input type="radio" name="repeat" value="every_other" placeholder="Every Other Day">Every Other Day
                </label>
            </div>
            <input type="submit" value="Create Task">
        </form>
    </div>
</div>
